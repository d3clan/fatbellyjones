<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="fatbellyjones" transaction-type="RESOURCE_LOCAL">
	
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.viviquity.core.model.News</class>
		<class>com.viviquity.core.model.Event</class>
		<class>com.viviquity.core.model.User</class>
		<class>com.viviquity.core.model.Role</class>
		<class>com.viviquity.core.model.Tune</class>
		<class>com.viviquity.core.model.PlaylistEntry</class>
		<class>com.viviquity.core.model.ConfirmedUser</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		
	</persistence-unit>
	
</persistence>